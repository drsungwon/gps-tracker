<?xml version='1.0' encoding='utf-8'?>
<widget id="kr.ac.khu.swcon.drsungwon.gpstracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>뚜벅뚜벅</name>
    <description>
        Simple GPS logging application.
    </description>
    <author email="drsungwon@khu.ac.kr" href="http://mobilelab.khu.ac.kr">
        Dr.Sungwon at Kyung Hee University
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="ws://*/*" />
    <allow-intent href="wss://*/*" />
    <allow-navigation href="*"/>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config file="*-Info.plist" mode="merge" platform="ios" target="NSLocationWhenInUseUsageDescription">
        <string>Required to send machine location.</string>
    </edit-config>
    </platform>
</widget>
